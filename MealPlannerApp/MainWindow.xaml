        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schsemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MealPlannerApp"
        mc:Ignorable="d"
        WindowStyle="None"
        xmlns:userControls="clr-namespace:MealPlannerApp.View.UserControls" 
        Title="Meal Planner" Height="600" Width="1000">


   

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <userControls:TitleBar  Grid.Row="0" />
        <DataGrid Grid.Row="1"  Width="875" Height="150" Background="Transparent" Margin="50,0,550,400"  />
        <DataGrid Grid.Row="1"  Width="400" Height="300" Background="Transparent" Margin="50,200,550,150"  />
        <DataGrid Grid.Row="1"  Width="400" Height="300" Background="Transparent" Margin="500,200,50,150"  />
        


    </Grid>
</Window>
