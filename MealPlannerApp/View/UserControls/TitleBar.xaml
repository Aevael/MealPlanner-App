<UserControl x:Class="MealPlannerApp.View.UserControls.TitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MealPlannerApp.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800"
             MouseMove="TitleBar_MouseMove"
             MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
    <Border BorderBrush="Black" BorderThickness="0,0,0,0.5" >
        <Grid Background="#1E1E1E" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60*"/>
                <ColumnDefinition Width="40*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label x:Name="windowName" HorizontalAlignment="Left" VerticalAlignment="Center" Content="Title" Foreground="White" Padding="8,0,0,0" FontSize="14"/>
            <StackPanel Background="#1E1E1E" Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1" >
                <Button Style="{StaticResource TitleBarButton}" x:Name="minimizeButton" Content="-" Click="MinimizeButton_Click" FontSize="20"
                        />
                <Button Style="{StaticResource TitleBarButton}" x:Name="maximizeButton"  Click="MaximizeButton_Click">
                    <ContentControl x:Name="maximizeButtonControl" FontSize="14">
                        ◻
                    </ContentControl>
                </Button>
                <Button Style="{StaticResource CloseButton}" x:Name="closeButton" Click="CloseButton_Click" FontSize="14"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
