<UserControl x:Class="GroceriesApp.View.UserControls.TitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GroceriesApp.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800" >
    <Grid Background="#333333">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label x:Name="windowName" HorizontalAlignment="Left" Content="Title" Foreground="White"/>
        <StackPanel Background="#333333" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="closeButton" Content="_" Width="40" Height="30" BorderBrush="Transparent" Background="Transparent" Foreground="White"
                Click="CloseButton_Click"/>
            <Button x:Name="maximizeButton" Content="🗖" Width="40" Height="30" BorderBrush="Transparent" Background="Transparent" Foreground="White"
                Click="MaximizeButton_Click"/>
            <Button x:Name="minimizeButton" Content="X" Width="40" Height="30" BorderBrush="Transparent" Background="Transparent" Foreground="White"
                Click="MinimizeButton_Click" />
        </StackPanel>
    </Grid>
</UserControl>
