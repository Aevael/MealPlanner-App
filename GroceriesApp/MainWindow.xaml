<Window x:Class="GroceriesApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroceriesApp"
        mc:Ignorable="d"
        WindowStyle="None"
        xmlns:userControls="clr-namespace:GroceriesApp.View.UserControls"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"    
        Title="MainWindow" Height="450" Width="800"
        Background="#333333">

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="0" CaptionHeight="0"/>
    </WindowChrome.WindowChrome>
    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30
                           "/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="closeButton" Content="_" Width="40" Height="30" BorderBrush="Transparent" Background="Transparent" Foreground="White"
                    Click="CloseButton_Click"/>
            <Button x:Name="maximizeButton" Content="🗖" Width="40" Height="30" BorderBrush="Transparent" Background="Transparent" Foreground="White"
                    Click="MaximizeButton_Click"/>
            <Button x:Name="minimizeButton" Content="X" Width="40" Height="30" BorderBrush="Transparent" Background="Transparent" Foreground="White"
                    Click="MinimizeButton_Click"/>
        </StackPanel>



    </Grid>
</Window>
